---
import Star from "../images/logos/Star.svg";
import Lightning from "../images/logos/Lightning.svg";
import Tag from "../images/logos/Tag.svg";
import { Image } from "astro:assets";
---

<section class="final-frame">
  <span class="final-frame__subtitle">/ FINALE02</span>
  <h2 class="final-frame__title">Click Me ? Might enter the finals</h2>

  <svg
    width="55"
    height="50"
    viewBox="0 0 55 50"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="final-frame__paw"
  >
    <path
      d="M1.16039 37.5816C0.37855 34.6638 2.11013 31.6646 5.02799 30.8827C7.94584 30.1009 10.945 31.8325 11.7269 34.7504L11.7741 34.9267C12.556 37.8445 10.8244 40.8437 7.90652 41.6256C4.98866 42.4074 1.98947 40.6758 1.20764 37.758L1.16039 37.5816Z"
      fill="currentColor"></path>
    <path
      d="M43.7197 26.1776C42.9379 23.2598 44.6695 20.2606 47.5873 19.4787C50.5052 18.6969 53.5044 20.4285 54.2862 23.3463L54.3335 23.5227C55.1153 26.4405 53.3837 29.4397 50.4659 30.2216C47.548 31.0034 44.5488 29.2718 43.767 26.354L43.7197 26.1776Z"
      fill="currentColor"></path>
    <path
      d="M14.6291 45.5807C13.8343 42.6142 15.5947 39.5649 18.5613 38.7701L39.8114 33.0761C42.778 32.2812 45.8272 34.0417 46.6221 37.0082C47.417 39.9748 45.6565 43.024 42.6899 43.8189L21.4398 49.5129C18.4733 50.3078 15.424 48.5473 14.6291 45.5807Z"
      fill="currentColor"></path>
    <path
      d="M5.83762 12.7685C5.05578 9.85069 6.78736 6.8515 9.70522 6.06966C12.6231 5.28782 15.6223 7.01941 16.4041 9.93726L16.4513 10.1136C17.2332 13.0315 15.5016 16.0306 12.5837 16.8125C9.66589 17.5943 6.6667 15.8627 5.88486 12.9449L5.83762 12.7685Z"
      fill="currentColor"></path>
    <path
      d="M27.2658 7.02724C26.484 4.10938 28.2156 1.11019 31.1334 0.328355C34.0513 -0.453482 37.0505 1.2781 37.8323 4.19596L37.8796 4.37229C38.6614 7.29015 36.9298 10.2893 34.012 11.0712C31.0941 11.853 28.0949 10.1214 27.3131 7.20357L27.2658 7.02724Z"
      fill="currentColor"></path>
  </svg>

  <div class="final-frame__button-container">
    <Image src={Tag} alt="" class="final-frame__button-tag" />
    <button class="final-frame__button">Enter Next Level</button>
    <Image src={Lightning} alt="" class="final-frame__button-lightning" />
    <Image src={Star} alt="" class="final-frame__button-start" />
  </div>
</section>

<script>
  import { getFireworks } from "../utils/getFireworks";

  const button = document.querySelector(".final-frame__button");
  button?.addEventListener("click", () => {
    getFireworks();
  });
</script>

<style>
  .final-frame {
    position: sticky;
    position: relative;
    overflow: hidden;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;

    margin-inline: 32px;
    background-color: var(--secondary);
    border-radius: 60px;
    height: calc(
      100vh - var(--height-header-desktop) - var(--height-footer-desktop)
    );
  }
  .final-frame__title {
    margin: 87px;
    position: relative;
    bottom: 4%;

    color: var(--primary);

    font-size: 115px;
    font-weight: 600;
    line-height: 123px;
    text-align: justify;
  }

  .final-frame__paw {
    position: absolute;
    top: 59%;
    right: 16%;
    color: var(--primary);
  }

  .final-frame__button-container {
    position: relative;
    width: 212px;
    height: 58px;
    position: absolute;
    bottom: 80px;
    right: 50%;
    transform: translateX(50%);
  }

  .final-frame__button {
    background-color: var(--primary);
    color: var(--secondary);
    position: relative;
    width: 100%;
    height: 100%;

    padding: 22px 10px 22px 10px;
    border: none;
    border-radius: 60px;

    display: flex;
    justify-content: center;
    align-items: center;

    font-size: 13.67px;
    font-weight: 600;
    line-height: 14px;
    text-align: center;

    &:hover {
      cursor: pointer;
    }
  }

  .final-frame__button-tag {
    position: absolute;
    bottom: 32px;
    right: -20px;
  }

  .final-frame__button-lightning {
    position: absolute;
    bottom: -20px;
    right: 10px;
  }

  .final-frame__button-start {
    position: absolute;
    bottom: 42px;
    left: 0px;
  }

  .final-frame__subtitle {
    position: absolute;
    top: 64px;
    left: 76px;

    font-size: 12px;
    font-weight: 500;
    line-height: 20px;
    text-align: left;

    color: var(--primary);
  }

  @media (max-width: 768px) {
    .final-frame {
      margin-inline: 12px;
    }

    .final-frame__title {
      font-size: 40px;
      font-weight: 600;
      line-height: 48px;
      text-align: justify;

      margin: 45px;
    }

    .final-frame__paw {
      top: 15%;
    }

    .final-frame__subtitle {
      top: 40px;
      left: 47px;
    }
  }
</style>
