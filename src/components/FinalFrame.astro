---
import Paw from "../images/logos/Paw.svg";
import Star from "../images/logos/Star.svg";
import Lightning from "../images/logos/Lightning.svg";
import Tag from "../images/logos/Tag.svg";
import { Image } from "astro:assets";
---

<section class="final-frame">
  <span class="final-frame__subtitle">/ FINALE02</span>
  <h2 class="final-frame__title">Click Me ? Might enter the finals</h2>
  <Image src={Paw} alt="" class="final-frame__paw" />
  <div class="final-frame__button-container">
    <Image src={Tag} alt="" class="final-frame__button-tag" />
    <button class="final-frame__button">Enter Next Level</button>
    <Image src={Lightning} alt="" class="final-frame__button-lightning" />
    <Image src={Star} alt="" class="final-frame__button-start" />
  </div>
</section>

<script>
  import { getFireworks } from "../utils/getFireworks";

  const button = document.querySelector(".final-frame__button");
  button?.addEventListener("click", () => {
    getFireworks();
  });
</script>

<style>
  .final-frame {
    position: sticky;
    position: relative;
    overflow: hidden;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;

    margin-inline: 32px;
    background-color: var(--COD-Black);
    border-radius: 60px;
    height: calc(
      100vh - var(--heigth-header-desktop) - var(--heigth-footer-desktop)
    );
  }
  .final-frame__title {
    margin: 87px;
    position: relative;
    bottom: 4%;

    color: var(--COD-Beige);

    font-size: 115px;
    font-weight: 600;
    line-height: 123px;
    text-align: justify;
  }

  .final-frame__paw {
    position: absolute;
    top: 59%;
    right: 16%;
  }

  .final-frame__button-container {
    position: relative;
    width: 212px;
    height: 58px;
    position: absolute;
    bottom: 80px;
    right: 50%;
    transform: translateX(50%);
  }

  .final-frame__button {
    position: relative;
    width: 100%;
    height: 100%;

    padding: 22px 10px 22px 10px;
    border: none;
    border-radius: 60px;

    display: flex;
    justify-content: center;
    align-items: center;

    font-size: 13.67px;
    font-weight: 600;
    line-height: 14px;
    text-align: center;

    &:hover {
      cursor: pointer;
    }
  }

  .final-frame__button-tag {
    position: absolute;
    bottom: 32px;
    right: -20px;
  }

  .final-frame__button-lightning {
    position: absolute;
    bottom: -20px;
    right: 10px;
  }

  .final-frame__button-start {
    position: absolute;
    bottom: 42px;
    left: 0px;
  }

  .final-frame__subtitle {
    position: absolute;
    top: 64px;
    left: 76px;

    font-size: 12px;
    font-weight: 500;
    line-height: 20px;
    text-align: left;

    color: var(--COD-White);
  }

  @media (max-width: 768px) {
    .final-frame {
      margin-inline: 12px;
    }

    .final-frame__title {
      font-size: 40px;
      font-weight: 600;
      line-height: 48px;
      text-align: justify;

      margin: 45px;
    }

    .final-frame__paw {
      top: 15%;
    }

    .final-frame__subtitle {
      top: 40px;
      left: 47px;
    }
  }
</style>
