<div class="target-box-container">
  <slot />
  <div class="target-box"></div>
</div>

<style>
  .target-box-container {
    position: relative;
    width: 100%;
    height: 106px;
  }
  .target-box {
    display: flex;
    align-items: center;
    justify-content: center;

    width: 106px;
    height: 106px;
    background-color: rgba(243, 243, 241, 0.3);
    border-style: dashed;
    border-width: 2px;
    border-color: var(--COD-Beige);
    border-radius: 10px;

    box-shadow: 0px -3px 4px 0px #88888840 inset;

    position: absolute;
    top: 0;
    left: 0;
  }

  .target-box--failed {
    border-color: var(--COD-COLOR-Orange-Dark);
    background-image: url("../../images/game/cross.svg");
    background-size: 26px;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
