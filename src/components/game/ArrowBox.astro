---
interface Props {
  arrow: "left" | "up" | "right" | "down";
  class: string;
}
const { arrow, class: className, ...rest } = Astro.props;
---

<div class={`arrow-box ${className}`} {...rest}>
  <div class=`arrow-box__arrow arrow-box__arrow--${arrow}`>
    <svg
      fill="currentColor"
      width="40px"
      height="40px"
      viewBox="0 0 15 15"
      xmlns="http://www.w3.org/2000/svg"
      id="arrow"
    >
      <path
        d="M8.29289 2.29289C8.68342 1.90237 9.31658 1.90237 9.70711 2.29289L14.2071 6.79289C14.5976 7.18342 14.5976 7.81658 14.2071 8.20711L9.70711 12.7071C9.31658 13.0976 8.68342 13.0976 8.29289 12.7071C7.90237 12.3166 7.90237 11.6834 8.29289 11.2929L11 8.5H1.5C0.947715 8.5 0.5 8.05228 0.5 7.5C0.5 6.94772 0.947715 6.5 1.5 6.5H11L8.29289 3.70711C7.90237 3.31658 7.90237 2.68342 8.29289 2.29289Z"
      ></path>
    </svg>
  </div>
</div>

<style>
  .arrow-box {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;

    width: 106px;
    height: 106px;
    background-color: var(--COD-Beige);
    border-radius: 10px;

    font-size: 3rem;
  }
  .arrow-box__arrow {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--COD-Grey);
  }

  .arrow-box__arrow--left {
    transform: rotate(180deg);
  }
  .arrow-box__arrow--up {
    transform: rotate(270deg);
  }
  .arrow-box__arrow--right {
    transform: rotate(0deg);
  }
  .arrow-box__arrow--down {
    transform: rotate(90deg);
  }

  .arrow-box--success {
    background-color: var(--COD-COLOR-Green-Light);
  }
  .arrow-box--failed {
    background-color: var(--COD-COLOR-Orange-Light);
  }
</style>
