---
import Logo from "./Logo.astro";
import ProgressNumber from "./ProgressNumber.astro";
---

<footer class="footer">
  <div class="footer__logo">
    <Logo />
  </div>
  <div class="footer__progress">
    <ProgressNumber />
  </div>
  <div class="footer__copyright">@2024</div>

  <style>
    .footer {
      width: 100%;
      position: relative;
      background-color: var(--COD-Beige);

      display: grid;
      grid-template-columns: 1fr auto 1fr;
      align-items: baseline;
      padding: 40px 32px 20px 32px;
    }

    .footer__copyright {
      align-self: flex-end;

      font-size: 12px;
      font-weight: 700;
      line-height: 20px;
      text-align: right;
    }

    @media (max-width: 768px) {
      .footer {
        padding: 40px 12px;
      }
    }
  </style>
</footer>
