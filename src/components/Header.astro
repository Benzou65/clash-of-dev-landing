---
import Logo from "./Logo.astro";
import Switch from "./Switch.astro";
import Progress from "./Progress.astro";
import ProgressNumber from "./ProgressNumber.astro";
---

<header class="header">
  <Progress />
  <div class="header__group">
    <Logo />
    <slot />
    <div class="header__switch">
      <Switch />
    </div>
  </div>
</header>

<style>
  .header {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
  }

  .header__group {
    position: relative;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 20px 32px 40px 32px;
  }

  .header__switch {
    justify-self: end;
  }

  .header__progress {
    font-size: 12px;
    font-weight: 700;
    line-height: 20px;
    text-align: center;
  }

  @media (max-width: 768px) {
    .header__group {
      padding: 40px 12px;
    }
  }
</style>
