---
import "../styles/modern-normalize.css";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
---

<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
    />
    <title>Clash of Dev</title>
    <meta name="description" content="<A>Front les tous!" />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  body {
    font-family: "Inter", sans-serif;
    color: var(--secondary);
    background-color: var(--primary);
    transition:
      color 0.3s ease-in-out,
      background-color 0.3s ease-in-out;
  }
  * {
    margin: 0;
  }
  :root {
    --COD-Black: #262625;
    --COD-Beige: #f3f3f1;
    --COD-White: #fefefe;

    --COD-COLOR-Purple-Light: #ebedff;
    --COD-COLOR-Purple-Mid: #9fa8fe;
    --COD-COLOR-Purple-Dark: #8a92e3;

    --heigth-header-desktop: 87px;
    --heigth-header-mobile: 107px;
    --heigth-footer-desktop: 87px;
    --heigth-footer-mobile: 107px;
  }

  [data-theme="light"] {
    --primary: #f3f3f1;
    --secondary: #262625;
  }

  [data-theme="dark"] {
    --primary: #262625;
    --secondary: #f3f3f1;
  }
</style>
